# Firebase Configuration
# Obtén estos valores de Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Vercel Analytics (opcional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_analytics_id

# ControlFile Integration
NEXT_PUBLIC_CONTROLFILE_BACKEND_URL=https://controlfile.onrender.com
NEXT_PUBLIC_CONTROLFILE_API_KEY=your_controlfile_api_key
NEXT_PUBLIC_CONTROLFILE_AUTH_DOMAIN=your_controlfile_auth_domain
NEXT_PUBLIC_CONTROLFILE_PROJECT_ID=your_controlfile_project_id
NEXT_PUBLIC_CONTROLFILE_APP_ID=your_controlfile_app_id
NEXT_PUBLIC_CONTROLFILE_APP_DISPLAY_NAME=ControlFile

# Configuración de desarrollo
NODE_ENV=development
